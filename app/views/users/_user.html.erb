<li>
  <%= gravatar_for user, :size => 30 %>
  <% if current_user.admin? %>
		<% if user.admin? %>
  		<%= link_to "#{user.name} (admin)", user %>
		<% else %>
      <%= link_to user.name, user %>
		<% end %>
		<% if current_user != user %>
			<% if @show_delete %>
			  | <%= link_to "delete", user, :method => :delete, 
					:confirm => "Are you sure?",
	        :title => "Delete #{user.name}" %>
			<% end %>
		<% else %>
		  (This is you!)
		<% end %>
	<% else %>
		<%= link_to user.name, user %>
  <% end %>
</li>